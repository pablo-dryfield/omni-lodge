{
    "name": "be",
    "version": "1.0.0",
    "description": "Backend for the OmniLodge Booking System",
    "main": "src/app.ts",
    "type": "module",
    "scripts": {
        "build:clean": "rimraf dist",
        "build": "npm run build:clean && tsc",
        "postbuild": "node dist/scripts/syncAccessControl.js",
        "start": "npm run build && node dist/app.js",
        "start:prod": "cross-env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=4096 npm run build && cross-env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=4096 node dist/app.js",
        "start:dev": "cross-env NODE_ENV=development npm run build && cross-env NODE_ENV=development node dist/app.js",
        "sync:access-control": "npm run build:clean && tsc && node dist/scripts/syncAccessControl.js",
        "postinstall": "tsc",
        "dev": "nodemon src/app.ts",
        "test": "jest",
        "migrate": "cross-env NODE_OPTIONS=--max-old-space-size=4096 npm run build && cross-env NODE_OPTIONS=--max-old-space-size=4096 node dist/scripts/runMigrations.js",
        "migrate:undo": "cross-env NODE_OPTIONS=--max-old-space-size=4096 npm run build && cross-env NODE_OPTIONS=--max-old-space-size=4096 node dist/scripts/runMigrations.js --undo"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(ts|tsx|js|jsx)$": "babel-jest"
        },
        "moduleNameMapper": {
            "^\\.\\./models/(RoleModulePermission|Module|Action|User|UserType)\\.js$": "<rootDir>/src/__mocks__/sequelizeModelStub.ts",
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "modulePathIgnorePatterns": [
            "<rootDir>/dist/"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cls-hooked": "^4.3.8",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.11.6",
        "@types/node-cron": "^3.0.11",
        "@types/nodemailer": "^7.0.3",
        "@types/sequelize": "^4.28.20",
        "axios": "^1.11.0",
        "bcryptjs": "^2.4.3",
        "cls-hooked": "^4.2.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.13",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.9.0",
        "express-validator": "^7.0.1",
        "google-auth-library": "^9.0.0",
        "googleapis": "^126.0.1",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.1",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.11",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "prom-client": "^14.2.0",
        "puppeteer": "^22.3.0",
        "reflect-metadata": "^0.2.1",
        "rimraf": "^5.0.5",
        "sequelize": "^6.32.1",
        "sequelize-typescript": "^2.1.6",
        "typescript": "^5.3.3",
        "umzug": "^3.4.1",
        "winston": "^3.10.0"
    },
    "devDependencies": {
        "@babel/core": "^7.22.11",
        "@babel/plugin-proposal-decorators": "^7.24.1",
        "@babel/preset-env": "^7.22.10",
        "@babel/preset-typescript": "^7.23.3",
        "@types/jest": "^29.5.12",
        "@types/supertest": "^6.0.3",
        "babel-jest": "^29.6.4",
        "jest": "^29.6.4",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.3",
        "ts-node": "^10.9.2"
    }
}
